<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/unnamed"
    tools:context="com.example.johan.multi_quiz.DifficultyActivity">

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/choosedif"
        android:textAlignment="center"
        android:textSize="40dp" />

    <Button
        android:id="@+id/facile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:onClick="goToEasy"
        android:text="@string/easy"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/moyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="goToMedium"
        android:text="@string/medium"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/Difficile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="goToHard"
        android:text="@string/hard"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/background_light"/>

</LinearLayout>
